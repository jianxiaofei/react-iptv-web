.ant-timeline
  padding 30px
  overflow-x scroll
  &.ant-timeline-label
    .ant-timeline-item-label
      width calc(10% - 12px)
    .ant-timeline-item-tail, .ant-timeline-item-head
      left 10%
    .ant-timeline-item-left .ant-timeline-item-content
      left calc(10% - 4px)
      width calc(70% - 14px)
  h4
    color #fff
  .footer-chip
    position: absolute
    right: 0
    color: #ccc
